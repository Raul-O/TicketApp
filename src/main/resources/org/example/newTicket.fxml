<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="700.0" prefWidth="900.0" spacing="20.0"
      style="-fx-background-color: #090a0c,        linear-gradient(#38424b 0%, #1f2429 20%, #191d22 100%),        linear-gradient(#20262b, #191d22),        radial-gradient(center 50% 0%, radius 100%, rgba(114,131,148,0.9), rgba(255,255,255,0));"
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.NewTicketController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <ComboBox fx:id="departament" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
              onAction="#setEchipament" prefHeight="60.0" prefWidth="400.0" promptText="Departament"
              style="-fx-font-size: 30;">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Altul"/>
                <String fx:value="Ciment"/>
                <String fx:value="Gestiune"/>
                <String fx:value="Ipsos"/>
                <String fx:value="IT"/>
                <String fx:value="Mentenanta"/>
                <String fx:value="Signature"/>
            </FXCollections>
        </items>
    </ComboBox>

    <ComboBox fx:id="echipament" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" onAction="#setDefectiune" prefHeight="60.0" prefWidth="400.0" promptText="Echipament"
              style="-fx-font-size: 30;"/>
    <ComboBox fx:id="defectiune" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" onAction="#setPrioritate" prefHeight="60.0" prefWidth="400.0" promptText="Defectiune"
              style="-fx-font-size: 30;"/>
    <ComboBox fx:id="prioritate" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" onAction="#setObs" prefHeight="60.0" prefWidth="400.0" promptText="Prioritate"
              style="-fx-font-size: 30;">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="FOARTE RIDICATA"/>
                <String fx:value="RIDICATA"/>
                <String fx:value="MEDIE"/>
                <String fx:value="SCAZUTA"/>
            </FXCollections>
        </items>
    </ComboBox>
    <TextArea fx:id="obs" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" onKeyTyped="#activateOK" prefHeight="200.0" prefWidth="400.0"
              promptText="Observatii">
        <font>
          <Font size="14.0"/>
        </font>
    </TextArea>
    <Label fx:id="newTicketInfoLbl" prefHeight="41.0" prefWidth="400.0" style="-fx-text-fill: yellow;">
        <font>
          <Font name="Consolas Bold" size="18.0"/>
        </font>
    </Label>
    <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="60.0"
          prefWidth="399.0" VBox.vgrow="NEVER">
        <children>
          <Button fx:id="okButton" alignment="CENTER" disable="true" layoutX="299.0" maxHeight="-Infinity"
                  maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                  onAction="#addTicket" prefHeight="45.0" prefWidth="100.0"
                  style="-fx-background-color: #090a0c,        linear-gradient(#38424b 0%, #1f2429 20%, #191d22 100%),        linear-gradient(#20262b, #191d22),        radial-gradient(center 50% 0%, radius 100%, rgba(114,131,148,0.9), rgba(255,255,255,0)); -fx-background-radius: 5.4.3.5; -fx-background-insets: 0,1,2,0; -fx-text-fill: yellow; -fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 5, 0.0 , 0 , 1 );"
                  text="OK">
              <font>
                  <Font name="Book Antiqua Bold" size="14.0"/>
              </font>
          </Button>
          <Button fx:id="backBtn" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                  minWidth="-Infinity" mnemonicParsing="false" onAction="#goBack" prefHeight="45.0" prefWidth="100.0"
                  style="-fx-background-color: #090a0c,        linear-gradient(#38424b 0%, #1f2429 20%, #191d22 100%),        linear-gradient(#20262b, #191d22),        radial-gradient(center 50% 0%, radius 100%, rgba(114,131,148,0.9), rgba(255,255,255,0)); -fx-background-radius: 5.4.3.5; -fx-background-insets: 0,1,2,0; -fx-text-fill: yellow; -fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 5, 0.0 , 0 , 1 );"
                  text="Inapoi">
              <font>
                  <Font name="Book Antiqua Bold" size="14.0"/>
              </font>
          </Button>
        </children>
    </Pane>
</VBox>
